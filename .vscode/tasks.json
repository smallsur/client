{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "/usr/bin/cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "cmake build"
        },
        {
            "type": "shell",
            "label": "compile and target",
            "command": "/usr/bin/cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "${fileBasenameNoExtension}",
                "-j",
                "2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "cmake build",
            "dependsOn": [
                "build"
            ]
        } 
    ],
    "version": "2.0.0"
}